<main class="page-faq">
  <div class="breadcrumbs-area">
    <nav  role="navigation" aria-label="breadcrumb">
      <ol class="breadcrumb-wrap">
        <li class="breadcrumb-page"><a href="{{ routes.root_url }}">HOME</a></li>
        <li class="breadcrumb-page">{{ page.title }}</li>
      </ol>
    </nav>
  </div>

  <section id="js-faq"  class="jm-faq" >
    <div class="page-inner">
      <div class="content-inner">
        <div class="jm-faq__ttlArea">
          {% if section.settings.heading != blank %}
            <h2 class="jm-section__title">
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p class="jm-section__subtitle">
              {{ section.settings.subheading }}
            </p>
          {% endif %}
        </div>
        <div class="jm-faq__contents">
          {% for block in section.blocks %}
            {% assign faq_block = block.settings %}
            <div class="jm-faq__content">
              {% if block.settings.sub-title != blank %}
                <h2 class="jm-faq__title">{{ faq_block.sub-title }}</h2>
              {% endif %}
              <div class="jm-faq__accordionArea">
                {% for i in (1..6) %}
                  {% assign question_key = "question" | append: i %}
                  {% assign answer_key = "answer" | append: i %}
                  {% assign question = faq_block[question_key] %}
                  {% assign answer = faq_block[answer_key] %}
                  {% if question != blank %}
                    <div class="jm-accordion__q">{{ question }}</div>
                    {% if answer != blank %}
                      <div class="jm-accordion__a">{{ answer }}</div>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>

      </div>
    </div>
  </section>
</main>

