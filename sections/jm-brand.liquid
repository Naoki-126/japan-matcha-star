<section class="jm-brand">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-brand__ttlArea">
        {% if section.settings.heading != blank %}
          <h2 class="jm-section__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="jm-section__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
        {% if section.settings.sub_jp != blank %}
          <p class="jm-section__subJp">
            {{ section.settings.sub_jp }}
          </p>
        {% endif %}
      </div>

      {% for block in section.blocks %}
        <div class="jm-brand__inner{% if block.settings.reverse %} is-reverse{% endif %}">

          {% if block.settings.image != blank %}
            <div class="jm-brand__image">
              {{ block.settings.image | image_url: width: 900 | image_tag: loading: 'lazy' }}
            </div>
          {% endif %}

          {% if block.settings.text_heading != blank or block.settings.story != blank %}
            <div class="jm-brand__text">
              <div class="jm-brand__block">
                {% if block.settings.text_heading != blank %}
                  <h3 class="jm-brand__textTitle">
                    {{ block.settings.text_heading }}
                  </h3>
                {% endif %}

                {% if block.settings.text_jp != blank %}
                  <h3 class="jm-brand__textJp">
                    {{ block.settings.text_jp }}
                  </h3>
                {% endif %}

                {% if block.settings.story != blank %}
                  <div class="jm-brand__story rte">
                    {{ block.settings.story | newline_to_br }}
                  </div>
                {% endif %}

              </div>
              
              <div class="jm-brand__block">
                {% if block.settings.text_heading-2 != blank %}
                  <h3 class="jm-brand__textTitle">
                    {{ block.settings.text_heading-2 }}
                  </h3>
                {% endif %}

                {% if block.settings.text_jp-2 != blank %}
                  <h3 class="jm-brand__textJp">
                    {{ block.settings.text_jp-2 }}
                  </h3>
                {% endif %}

                {% if block.settings.story-2 != blank %}
                  <div class="jm-brand__story rte">
                    {{ block.settings.story-2 | newline_to_br }}
                  </div>
                {% endif %}
              </div>



            </div>
          {% endif %}

        </div>
      {% endfor %}

      {%- if section.settings.inv_heading != blank
        or section.settings.inv_tag_ja != blank
        or section.settings.inv_text != blank
        or section.settings.cta_1_label != blank
        or section.settings.cta_2_label != blank
      -%}
        <div class="jm-brand__invitation">
          {% if section.settings.inv_heading != blank %}
            <h3 class="jm-brand__invTitle">{{ section.settings.inv_heading }}</h3>
          {% endif %}

          {% if section.settings.inv_tag_ja != blank %}
            <p class="jm-brand__invTag">{{ section.settings.inv_tag_ja }}</p>
          {% endif %}

          {% if section.settings.inv_text != blank %}
            <div class="jm-brand__invText rte">
              {{ section.settings.inv_text }}
            </div>
          {% endif %}

          {% if section.settings.cta_1_label != blank or section.settings.cta_2_label != blank %}
            <div class="jm-brand__cta">
              {% if section.settings.cta_1_label != blank %}
                <a class="jm-brand__ctaBtn" href="{{ section.settings.cta_1_url | default: '#' }}">
                  {{ section.settings.cta_1_label }}
                </a>
              {% endif %}

              {% if section.settings.cta_2_label != blank %}
                <a class="jm-brand__ctaBtn" href="{{ section.settings.cta_2_url | default: '#' }}">
                  {{ section.settings.cta_2_label }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {%- endif -%}




    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brand-story",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "BRAND STORY"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "sub_jp",
      "label": "JP Title",
    },
    {
      "type": "header",
      "content": "Invitation (Text + CTA)"
    },
    {
      "type": "text",
      "id": "inv_heading",
      "label": "Invitation Heading (EN)",
      "default": "Invitation"
    },
    {
      "type": "text",
      "id": "inv_tag_ja",
      "label": "Invitation Tag (JA, 1 line)",
    },
    {
      "type": "richtext",
      "id": "inv_text",
      "label": "Invitation Text (EN)",
      "default": "<p>If you’re looking for a beauty trick, we may not be the right brand.</p><p>But if you want something real—rooted in Japan-grown matcha, refined with care, and built for daily rhythm—welcome.</p>"
    },
    {
      "type": "text",
      "id": "cta_1_label",
      "label": "CTA 1 Label",
      "default": "Explore Our Matcha →"
    },
    {
      "type": "url",
      "id": "cta_1_url",
      "label": "CTA 1 Link",
    },
    {
      "type": "text",
      "id": "cta_2_label",
      "label": "CTA 2 Label",
      "default": "Learn About Our Craft →"
    },
    {
      "type": "url",
      "id": "cta_2_url",
      "label": "CTA 2 Link"
    }

  ],
  "blocks": [
    {
      "type": "brand_story",
      "name": "brand_story",
      "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Story Image"
        },
        {
          "type": "text",
          "id": "text_heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "text_jp",
          "label": "Heading(JP)"
        },
        {
          "type": "richtext",
          "id": "story",
          "label": "Story Text"
        },
        {
          "type": "text",
          "id": "text_heading-2",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "text_jp-2",
          "label": "Heading(JP)"
        },
        {
          "type": "richtext",
          "id": "story-2",
          "label": "Story Text"
        },
        {
          "type": "checkbox",
          "id": "reverse",
          "label": "Reverse layout (PC only)",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand-story",
      "category": "Section"
    }
  ]
}
{% endschema %}
