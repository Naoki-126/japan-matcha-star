{% comment %}
  Section: Concept - Japan Matcha Star
{% endcomment %}

<section class="jm-concept section-{{ section.id }}">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-concept__ttlArea">
        {% if section.settings.heading != blank %}
          <h2 class="jm-section__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="jm-section__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>

      {% if section.settings.text != blank %}
        <div class="jm-concept__txtArea rte">
          {{ section.settings.text }}
        </div>
      {% endif %}

      <div class="jm-concept__paragraphs">
        {% for block in section.blocks %}
          <div class="jm-concept__paragraph">
            {% if block.settings.title != blank %}
              <h3 class="jm-concept__paraTitle">
                {{ block.settings.title }}
              </h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="jm-concept__paraText rte">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Matcha Concept",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Philosophy Behind Japan Matcha Star"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "A balance of tradition, purity, and modern excellence."
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Intro Text",
      "default": "<p>Japan Matcha Star is built on three core values.</p>"
    }
  ],
  "blocks": [
    {
      "type": "concept",
      "name": "Concept Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Japanese Origin"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Rooted in Japanese tea culture.</p>"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Matcha Concepts",
      "blocks": [
        { "type": "concept" },
        { "type": "concept" },
        { "type": "concept" }
      ]
    }
  ]
}
{% endschema %}
