<section class="jm-mission">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-mission__ttlArea">
        {% if section.settings.heading != blank %}
          <h2 class="jm-section__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="jm-section__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="jm-mission__inner">
          {% if section.settings.image != blank %}
            <div class="jm-mission__image">
              {{ section.settings.image | image_url: width: 750 | image_tag: loading: 'lazy' }}
            </div>
          {% endif %}
          <div class="jm-mission__content">
            {% for block in section.blocks %}
              {% if block.type == 'text' %}
                <p class="jm-mission__text jm-mission__text--{{ block.settings.style }}" {{ block.shopify_attributes }} >{{ block.settings.text }}</p>
              {% endif %}
            {% endfor %}
          </div>

        </div>
      {% endif %}

    </div>
  </div>
</section>

{% schema %}
{
  "name": "mission",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "見出し",
      "default": "Our Mission"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "サブ見出し",
      "default": "What we believe in"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "イメージ画像"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "テキスト",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "文章",
          "default": "私たちは、毎日口にするものだからこそ、誠実でありたいと考えています。"
        },
        {
          "type": "select",
          "id": "style",
          "label": "表示スタイル",
          "options": [
            {
              "value": "normal",
              "label": "通常"
            },
            {
              "value": "emphasis",
              "label": "強調（締めの一文）"
            }
          ],
          "default": "normal"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "mission",
      "category": "About"
    }
  ]
}
{% endschema %}
