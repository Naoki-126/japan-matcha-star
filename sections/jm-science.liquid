<section class="jm-science">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-science__ttlArea">
        {% if section.settings.heading != blank %}
          <h2 class="jm-section__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="jm-section__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>

      {%- assign b1 = section.settings.intro_bullet_1 | strip -%}
      {%- assign b2 = section.settings.intro_bullet_2 | strip -%}
      {%- assign b3 = section.settings.intro_bullet_3 | strip -%}

      {%- if b1 != blank or b2 != blank or b3 != blank -%}
        <ul class="jm-science__headArea">
          {%- if b1 != blank -%}
            <li class="jm-science__intro">{{ b1 }}</li>
          {%- endif -%}
          {%- if b2 != blank -%}
            <li class="jm-science__intro">{{ b2 }}</li>
          {%- endif -%}
          {%- if b3 != blank -%}
            <li class="jm-science__intro">{{ b3 }}</li>
          {%- endif -%}
        </ul>
      {%- endif -%}


      {% if section.blocks.size > 0 %}
        <div class="jm-science__inner">
          <ul class="jm-science__cardArea">
            {% for block in section.blocks %}
              <li class="jm-science__card" {{ block.shopify_attributes }}>
                {% if block.settings.title != blank %}
                  <h3 class="jm-science__ttl">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p class="jm-science__text">{{ block.settings.text | newline_to_br }}</p>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Science",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "WHY MATCHA WORKS"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Title",
      "default": "The science behind its natural power"
    },
    {
      "type": "text",
      "id": "intro_bullet_1",
      "label": "Intro bullet 1",
      "default": "calm focus"
    },
    {
      "type": "text",
      "id": "intro_bullet_2",
      "label": "Intro bullet 2",
      "default": "clean energy"
    },
    {
      "type": "text",
      "id": "intro_bullet_3",
      "label": "Intro bullet 3",
      "default": "daily balance"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Antioxidant Power"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science",
      "category": "About"
    }
  ]
}
{% endschema %}
