{% comment %}
  Section: JM Benefits (Image + Multicolumn)
{% endcomment %}

<section class="jm-benefits section-{{ section.id }}">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-benefits__ttlArea">
        {% if section.settings.heading != blank %}
          <h2 class="jm-section__title">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="jm-section__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>

      {% if section.settings.image != blank %}
        <div class="jm-benefits__image">
          {{ section.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy' }}
        </div>
      {% endif %}

      {% if section.settings.sub_title != blank %}
        <p class="jm-benefits__subTitle">{{ section.settings.sub_title }}</p>
      {% endif %}

      <div class="jm-benefits__columns">
        {% for block in section.blocks %}
          <div class="jm-benefits__column">
            <div class="jm-benefits__columnInner">
              <h3 class="jm-benefits__columnTitle">{{ block.settings.title }}</h3>
              <div class="jm-benefits__columnText rte">
                {{ block.settings.text }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Benefits",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "Beauty Begins from Within"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "A balance of tradition, purity, and modern excellence."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Top Image"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title",
      "default": "Nature-powered beauty from Japan"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Antioxidants"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Supports beauty and wellness.</p>"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Benefits",
    }
  ]
}
{% endschema %}
