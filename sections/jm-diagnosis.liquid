    { "type": "text", "id": "ceremonial_title", "label": "Ceremonial title", "default": "Ceremonial Matcha" },
    { "type": "textarea", "id": "ceremonial_text", "label": "Ceremonial text", "default": "A balanced ceremonial matcha that performs beautifully both straight and in recipes." },
    { "type": "url", "id": "ceremonial_link", "label": "Ceremonial link" }
  ],
  "presets": [
    { "name": "Matcha Finder", "category": "Section" }
  ]
}
{% endschema %}
