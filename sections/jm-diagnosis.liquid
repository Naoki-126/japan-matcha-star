<section class="jm-diagnosis">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-diagnosis__contents">
        <!-- Intro -->
        <div class="jm-diagnosis__intro is-active" data-step="intro">
          <p class="jm-diagnosis__lead">
            {{ section.settings.intro_lead }}
          </p>
          <p class="jm-diagnosis__text">
            {{ section.settings.intro_text }}
          </p>
        </div>

        <div class="jm-diagnosis__content">
          <!-- Question 0 -->
          <div class="jm-diagnosis__question is-active" data-question="q0">
            <p class="jm-diagnosis__questionText">{{ section.settings.q0_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="a">{{ section.settings.q0_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="b">{{ section.settings.q0_a2 }}</button></li>
            </ul>
          </div>

          <!-- Question 1 -->
          <div class="jm-diagnosis__question" data-question="q1">
            <p class="jm-diagnosis__questionText">{{ section.settings.q1_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="mix">{{ section.settings.q1_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="straight">{{ section.settings.q1_a2 }}</button></li>
              <li><button class="answer-btn" data-answer="both">{{ section.settings.q1_a3 }}</button></li>
            </ul>
          </div>

          <!-- Question 2 -->
          <div class="jm-diagnosis__question" data-question="q2">
            <p class="jm-diagnosis__questionText">{{ section.settings.q2_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="yes">{{ section.settings.q2_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="no">{{ section.settings.q2_a2 }}</button></li>
            </ul>
          </div>

          <!-- Question 3 -->
          <div class="jm-diagnosis__question" data-question="q3">
            <p class="jm-diagnosis__questionText">{{ section.settings.q3_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="gentle">{{ section.settings.q3_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="refind">{{ section.settings.q3_a2 }}</button></li>
            </ul>
          </div>

          <!-- Question 4 -->
          <div class="jm-diagnosis__question" data-question="q4">
            <p class="jm-diagnosis__questionText">{{ section.settings.q4_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="yes">{{ section.settings.q4_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="no">{{ section.settings.q4_a2 }}</button></li>
            </ul>
          </div>

          <!-- Question 5 -->
          <div class="jm-diagnosis__question" data-question="q5">
            <p class="jm-diagnosis__questionText">{{ section.settings.q5_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="stability">{{ section.settings.q5_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="light">{{ section.settings.q5_a2 }}</button></li>
            </ul>
          </div>

          <!-- Question 6 -->
          <div class="jm-diagnosis__question" data-question="q6">
            <p class="jm-diagnosis__questionText">{{ section.settings.q6_text }}</p>
            <ul class="jm-diagnosis__options">
              <li><button class="answer-btn" data-answer="daily">{{ section.settings.q6_a1 }}</button></li>
              <li><button class="answer-btn" data-answer="occasional">{{ section.settings.q6_a2 }}</button></li>
            </ul>
          </div>

        </div>

        <!-- Results -->
        <div class="jm-diagnosis__result" data-result="organic_matcha">
          <p class="jm-diagnosis__resultLabel">{{ section.settings.result_label }}</p>
          <h3>{{ section.settings.organic_title }}</h3>
          <p>{{ section.settings.organic_text }}</p>
          <a href="{{ section.settings.organic_link }}">
            {{ section.settings.result_cta }}
          </a>
        </div>

        <div class="jm-diagnosis__result" data-result="premium_ceremonial">
          <p class="jm-diagnosis__resultLabel">{{ section.settings.result_label }}</p>
          <h3>{{ section.settings.premium_title }}</h3>
          <p>{{ section.settings.premium_text }}</p>
          <a href="{{ section.settings.premium_link }}">
            {{ section.settings.result_cta }}
          </a>
        </div>

        <div class="jm-diagnosis__result" data-result="ceremonial">
          <p class="jm-diagnosis__resultLabel">{{ section.settings.result_label }}</p>
          <h3>{{ section.settings.ceremonial_title }}</h3>
          <p>{{ section.settings.ceremonial_text }}</p>
          <a href="{{ section.settings.ceremonial_link }}">
            {{ section.settings.result_cta }}
          </a>
        </div>

        <!-- Retry -->
        <div class="jm-diagnosis__resetArea">
          <button class="jm-diagnosis__reset" data-action="reset">Try again</button>
        </div>
      </div>

    </div>
  </div>
</section>

