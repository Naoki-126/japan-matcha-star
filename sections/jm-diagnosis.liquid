    { "type": "url", "id": "organic_link", "label": "Organic link" },

    { "type": "text", "id": "premium_title", "label": "Premium title", "default": "Premium Ceremonial Matcha" },
    { "type": "textarea", "id": "premium_text", "label": "Premium text", "default": "A refined ceremonial matcha with clear aroma and deep umami, best enjoyed straight." },
    { "type": "url", "id": "premium_link", "label": "Premium link" },

    { "type": "text", "id": "ceremonial_title", "label": "Ceremonial title", "default": "Ceremonial Matcha" },
    { "type": "textarea", "id": "ceremonial_text", "label": "Ceremonial text", "default": "A balanced ceremonial matcha that performs beautifully both straight and in recipes." },
    { "type": "url", "id": "ceremonial_link", "label": "Ceremonial link" }
  ],
  "presets": [
    { "name": "Matcha Finder", "category": "Section" }
  ]
}
{% endschema %}
