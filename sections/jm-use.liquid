<div class="breadcrumbs-area">
  <nav  role="navigation" aria-label="breadcrumb">
    <ol class="breadcrumb-wrap">
      <li class="breadcrumb-page"><a href="{{ routes.root_url }}">HOME</a></li>
      <li class="breadcrumb-page">{{ page.title }}</li>
    </ol>
  </nav>
</div>

<section class="jm-use">
  <div class="page-inner">
    <div class="content-inner">

      <div class="jm-use__ttlArea">
        {% if section.settings.heading != blank %}
          <h2 class="jm-section__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="jm-section__subtitle">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
      {% if section.settings.text != blank %}
        <div class="jm-use__text rte">
          {{ section.settings.text }}
        </div>
      {% endif %}

      <div class="jm-use__inner">
        <div class="jm-use__contentArea">
        {% if section.blocks.size > 0 %}
            <ul class="jm-use__contents">
              {% for block in section.blocks %}
                <li class="jm-use__content {% if block.settings.reverse %}is-reverse{% endif %}">
                  <div class="jm-use__imgArea">
                    {% if block.settings.image != blank %}
                      <div class="jm-use__image">
                        {{ block.settings.image | image_url: width: 600 | image_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="jm-use__txtArea">
                    {% if block.settings.title != blank %}
                      <h3 class="jm-use__contTitle">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.text != blank %}
                      <div class="jm-use__contText rte">{{ block.settings.text | newline_to_br }}</div>
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>

    </div>
  </div>
</section>

{%  schema  %}
{
  "name": "How to use",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "見出し",
      "default": "Ways to Enjoy Matcha"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "サブ見出し",
      "default": "From traditional preparation to everyday recipes"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Intro Text",
      "default": "<p>Enjoy matcha in many ways, every day.</p>"
    }
  ],
  "blocks": [
    {
      "type": "use",
      "name": "Use case",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image / Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "checkbox",
          "id": "reverse",
          "label": "Reverse layout (PC only)",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How to use",
      "category": "HOW"
    }
  ]
}
{% endschema %}
