<section class="jm-subHero">
  <div class="jm-subHero__contents">

    {%- if section.settings.ttl != blank or section.settings.txt != blank -%}
    <div class="jm-subHero__ttlArea">
      <div class="jm-subHero__ttlArea__content">
        {%- if section.settings.ttl != blank -%}
          <h1 class="jm-subHero__ttl">
            {{ section.settings.ttl }}
          </h1>
        {%- endif -%}

        {%- if section.settings.txt != blank -%}
          <p class="jm-subHero__txt">
            {{ section.settings.txt }}
          </p>
        {%- endif -%}
      </div>
    </div>
    {%- endif -%}

    {%- if section.settings.img != blank -%}
    <div class="jm-subHero__imgArea">
      <div class="jm-subHero__imgArea__content">
        <img
          class="jm-subHero__img"
          src="{{ section.settings.img | image_url: width: 2000 }}"
          alt="{{ section.settings.ttl | escape }}"
          loading="lazy"
        >
      </div>
    </div>
    {%- endif -%}

  </div>
</section>

{% schema %}
{
  "name": "Sub Hero",
  "settings": [
    {
      "type": "text",
      "id": "ttl",
      "label": "Title (English)",
      "default": "ABOUT US"
    },
    {
      "type": "textarea",
      "id": "txt",
      "label": "Text (Japanese)",
      "default": "日本の抹茶、その本質と美しさを世界へ。"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Sub Hero"
    }
  ]
}
{% endschema %}
